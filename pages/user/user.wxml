<view class="page">
  <view class="page__bd">
    <view class="weui-panel weui-panel_access">
      <view class="weui-panel__bd">
        <navigator url="" class="weui-media-box weui-media-box_appmsg" hover-class="weui-cell_active">
          <view class="weui-media-box__hd weui-media-box__hd_in-appmsg">
            <image class="weui-media-box__thumb" src="{{userInfoDB.avatar}}" />
          </view>
          <view class="weui-media-box__bd weui-media-box__bd_in-appmsg">
            <view class="weui-media-box__title">{{userInfoDB.username}}</view>
            <view class="weui-media-box__desc">{{userInfoDB.sign}}</view>
          </view>
        </navigator>
      </view>
    </view>
    <view class="weui-cells__title">功能列表</view>
    <view class="weui-cells weui-cells_after-title">
      <view bind:tap="onTapToMyArticle"  class="weui-cell weui-cell_access" hover-class="weui-cell_active">
        <view class="weui-cell__hd">
          <image src="/images/person/article.svg" style="margin-right: 16px;vertical-align: middle;width:20px; height: 20px;"></image>
        </view>
        <view class="weui-cell__bd">我的文章</view>
        <view class="weui-cell__ft weui-cell__ft_in-access">{{userInfo.articleList.length}}</view>
      </view>
      <navigator url="/pages/favor/favor" class="weui-cell weui-cell_example weui-cell_access" hover-class="weui-cell_active">
        <view class="weui-cell__hd">
          <image src="/images/person/favor.svg" style="margin-right: 16px;vertical-align: middle;width:20px; height: 20px;"></image>
        </view>
        <view class="weui-cell__bd">我的收藏</view>
        <view class="weui-cell__ft weui-cell__ft_in-access">{{userInfo.favor.length}}</view>
      </navigator>
      <navigator url="/pages/message/message" class="weui-cell weui-cell_example weui-cell_access" hover-class="weui-cell_active">
        <view class="weui-cell__hd">
          <image src="/images/person/message.svg" style="margin-right: 16px;vertical-align: middle;width:20px; height: 20px;"></image>
        </view>
        <view class="weui-cell__bd">我的消息</view>
        <view class="weui-cell__ft weui-cell__ft_in-access">{{userInfo.message.length}}</view>
      </navigator>
      <navigator url="/pages/myComment/myComment" class="weui-cell weui-cell_example weui-cell_access" hover-class="weui-cell_active">
        <view class="weui-cell__hd">
          <image src="/images/person/comment.svg" style="margin-right: 16px;vertical-align: middle;width:20px; height: 20px;"></image>
        </view>
        <view class="weui-cell__bd">我的评论</view>
        <view class="weui-cell__ft weui-cell__ft_in-access"></view>
      </navigator>
    </view>
    <view class="weui-btn-area">
      <button class="weui-btn" type="default" catch:tap="onTapClearCache">清除数据缓存</button>
      <button disabled="{{true}}" class="weui-btn" type="warn" catch:tap="onTapLogout">退出登录</button>
    </view>
  </view>
</view>