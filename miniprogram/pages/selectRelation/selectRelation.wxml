<cu-custom bgColor="bg-gradual-pink" bgImage="../../images/navibar/3.jpg" isBack="{{true}}">
  <view slot="backText">返回</view>
    <view slot="content">选择关联文章</view>
</cu-custom>
<checkbox-group bind:change="onTapChange">
    <block wx:for="{{articleList}}" wx:key="_id">
        <view class="cu-form-group">
            <view class="title text-cut text-blue" data-target="detail" data-detail="{{item}}" catch:tap="showModal">
                {{item.title}}
            </view>
            <checkbox value="{{item._id}}^^^{{item.userId}}^^^{{item.title}}" checked="{{item.checked}}"></checkbox>
        </view>
    </block>
</checkbox-group>
<view class="cu-modal {{modalName=='detail'?'show':''}}">
    <view class="cu-dialog">
        <view class="cu-bar bg-white justify-end">
            <view class="content">详细信息</view>
            <view class="action" bindtap="hideModal">
                <text class="cuIcon-close text-red"></text>
            </view>
        </view>
        <view class="margin-sm">
            <view class="padding-xs text-left">作者：{{detail.username}}</view>
            <view class="padding-xs text-left">标题：{{detail.title}}</view>
            <view class="padding-xs text-left">日期：{{detail.date}}</view>
        </view>
    </view>
</view>
<view class="padding flex flex-direction">
    <button class="cu-btn bg-green round lg shadow" bind:tap="submit">确定</button>
</view>